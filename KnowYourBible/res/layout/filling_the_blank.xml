<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Main_Falling" >

    <TextView
        android:id="@+id/scripture_fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="8dp"
        android:textSize="30sp" 
        android:text="w1aaaaaaaaaaaaaa"/>

    <EditText
        android:id="@+id/order1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/word1"
        android:layout_marginLeft="150dp"
        android:layout_toRightOf="@+id/word1"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/word1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/scripture_fill"
        android:layout_below="@+id/scripture_fill"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp"
        android:text="w1"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/order2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/order1"
        android:layout_below="@+id/order1"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="number" />
    
    <EditText
        android:id="@+id/order3"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/order2"
        android:layout_below="@+id/order2"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="number" />
    
    <EditText
        android:id="@+id/order4"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/order3"
        android:layout_below="@+id/order3"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/word2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/order2"
        android:layout_alignBottom="@+id/order2"
        android:layout_alignLeft="@+id/word1"
        android:text="TextView" />

    <TextView
        android:id="@+id/word3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/order3"
        android:layout_alignBottom="@+id/order3"
        android:layout_alignLeft="@+id/word2"
        android:text="TextView" />

    <TextView
        android:id="@+id/word4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/order4"
        android:layout_alignBottom="@+id/order4"
        android:layout_alignLeft="@+id/word3"
        android:text="TextView" />

    <Button
        android:id="@+id/newGameFill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="@string/newgame" />

    <Button
        android:id="@+id/submitFill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newGameFill"
        android:layout_centerHorizontal="true"
        android:text="@string/submit" />

</RelativeLayout>